<table width='80%' border=0>

	<tr style='text-align:left; background-color:#CCC'>
		<th>Job title</th>
		<th>Job description</th>
		<th>Location</th>
		<th>Action</th>
	</tr>
	
	<!--
		Using FOREACH LOOP for the postings array
		
		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	-->
	<% if (data) { %>
	<% data.forEach(function(posting){ %>
		<tr>
			<td><%= posting.job_title %></td>
			<td><%= posting.job_description %></td>
			<td><%= posting.location %></td>
			<td>
				<div style="float:left">
					<a href='/postings/edit/<%= posting.id %>'>Edit</a> &nbsp;							
					<form method="post" action="/postings/delete/<%= posting.id %>" style="float:right">
						<input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
						<input type="hidden" name="_method" value="DELETE" />
					</form>
				</div>
			</td>
		</tr>
	<% }) %>
	<% } %>

</table>

